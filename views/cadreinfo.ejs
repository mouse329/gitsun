<% layout('templates/layout') -%>

    <div class="container">
      <div class="row">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
                <th>學員代號</th>
                <th>姓名</th>
                <th>護持班級</th>
                <th>職稱</th>
                <th>護持時段</th>
                <th>母班</th>
                <th>母班時段</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
                <th>學員代號</th>
                <th>姓名</th>
                <th>護持班級</th>
                <th>職稱</th>
                <th>護持時段</th>
                <th>母班</th>
                <th>母班時段</th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#example').DataTable( {
                "data": <%-JSON.stringify(data)%>,
                "columns": [
                    { "data": "ID" },
                    { "data": "Name" },
                    { "data": "Shield" },
                    { "data": "Title" },
                    { "data": "ShieldSession" },
                    { "data": "Mom" },
                    { "data": "OriSession" }
                ],
                
                "lengthMenu": [ [10, 25, 50, -1],[10, 25, 50, "All"] ],
                "oLanguage": {
                    "sLengthMenu": " _MENU_ 筆/頁",
                    "sZeroRecords": "找不到符合的資料。",
                    "sInfoEmpty": "共 0 頁",
                    "sSearch": "搜尋",
                    "sInfoFiltered": " - 找到 _TOTAL_ 筆 資料",
                },
                "footerCallback": function ( row, data, start, end, display ) {
                    var api = this.api(), data; 
                },
                "deferRender":    true,   //(加速)Feature control deferred rendering for additional speed of initialisation.
            } );
        } );            	
    </script>    