        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">學苑內部查詢系統</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li class="active"><a href="#">月報表<span class="sr-only">(current)</span></a></li>
            <li><a href="/cadreinfo">班幹部查詢</a></li>           
        </ul>
        <form class="navbar-form navbar-left" action="/meminfo" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="學員姓名">
            </div>
            <button type="submit" class="btn btn-default">送出查詢</button>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Link</a></li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">分割頁面</a></li>
            </ul>
            </li>
        </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <div class="row">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
                <tr>
                    <th>班級</th>
                    <th>班長</th>
                    <th>類別</th>
                    <th>系列</th>
                    <th>上課地點</th>
                    <th>上課時段</th>
                    <th>人數</th>
                </tr>
          </thead>
          <tfoot>
            <tr>
                <th colspan="7" style="text-align:right"></th>
                
            </tr>
          </tfoot>
          <tbody>
              <% for ( var i = 0; i<data.length; i++){ %>
              <tr>
                  <td><%= data[i].班級  %></td>
                  <td><%= data[i].班長  %></td>
                  <td><%= data[i].類型  %></td>
                  <td><%= data[i].系列  %></td>
                  <td><%= data[i].上課地點  %></td>
                  <td><%= data[i].上課時段  %></td>
                  <td><%= data[i].現有人數  %></td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>
    
    <script type="text/javascript">
	        $(document).ready(function() {
                  $('#example').DataTable( {
                    "lengthMenu": [ [10, 25, 50, -1],[10, 25, 50, "All"] ],
                    "oLanguage": {
                        "sLengthMenu": " _MENU_ 筆/頁",
                        "sZeroRecords": "找不到符合的資料。",
                        "sInfoEmpty": "共 0 頁",
                        "sSearch": "搜尋",
                        "sInfoFiltered": " - 找到 _TOTAL_ 筆 資料",
                    },
                    "bProcessing": true,//顯示處理中的圖樣
                    "footerCallback": function ( row, data, start, end, display ) {
                        var api = this.api(), data;
            
                        // Remove the formatting to get integer data for summation
                        var intVal = function ( i ) {
                            return typeof i === 'string' ?
                                i.replace(/[\$,]/g, '')*1 :
                                typeof i === 'number' ?
                                    i : 0;
                        };
            
                        // Total over all pages
                        total = api
                            .column( 6 )
                            .data()
                            .reduce( function (a, b) {
                                return intVal(a) + intVal(b);
                            }, 0 );
            
                        // Total over this page
                        pageTotal = api
                            .column( 6, { page:'current'} )
                            .data()
                            .reduce( function (a, b) {
                                return intVal(a) + intVal(b);
                            }, 0 );
            
                        // Update footer
                        $( api.column( 6 ).footer() ).html(' 本頁累加:'
                            +pageTotal +'人 ( 總人數:'+ total +' )'
                        );
                    },
                    "initComplete": function () {
                        var api = this.api();
                        api.$('td').click( function () {
                            api.search( this.innerHTML ).draw();
                        } );
                    }
                } );
            } );          
  	</script>    
  </body>
</html>